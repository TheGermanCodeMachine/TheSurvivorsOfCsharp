@page
@model TheSurvivorsOfCsharp.Pages.Ratings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rating.ID" />
            <div class="form-group">
                <label asp-for="Rating.Date" class="control-label"></label>
                <input asp-for="Rating.Date" class="form-control" />
                <span asp-validation-for="Rating.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Grade" class="control-label"></label>
                <input asp-for="Rating.Grade" class="form-control" />
                <span asp-validation-for="Rating.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Comment" class="control-label"></label>
                <input asp-for="Rating.Comment" class="form-control" />
                <span asp-validation-for="Rating.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Semester" class="control-label"></label>
                <input asp-for="Rating.Semester" class="form-control" />
                <span asp-validation-for="Rating.Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.OverallRating" class="control-label"></label>
                <input asp-for="Rating.OverallRating" class="form-control" />
                <span asp-validation-for="Rating.OverallRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.ContactHours" class="control-label"></label>
                <input asp-for="Rating.ContactHours" class="form-control" />
                <span asp-validation-for="Rating.ContactHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.SelfStudyHours" class="control-label"></label>
                <input asp-for="Rating.SelfStudyHours" class="form-control" />
                <span asp-validation-for="Rating.SelfStudyHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Organized" class="control-label"></label>
                <input asp-for="Rating.Organized" class="form-control" />
                <span asp-validation-for="Rating.Organized" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Learned" class="control-label"></label>
                <input asp-for="Rating.Learned" class="form-control" />
                <span asp-validation-for="Rating.Learned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Interesting" class="control-label"></label>
                <input asp-for="Rating.Interesting" class="form-control" />
                <span asp-validation-for="Rating.Interesting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Presentation" class="control-label"></label>
                <input asp-for="Rating.Presentation" class="form-control" />
                <span asp-validation-for="Rating.Presentation" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rating.PassedFirstTime" /> @Html.DisplayNameFor(model => model.Rating.PassedFirstTime)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Rating.CourseID" class="control-label"></label>
                <select asp-for="Rating.CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
                <span asp-validation-for="Rating.CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.StudentID" class="control-label"></label>
                <select asp-for="Rating.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                <span asp-validation-for="Rating.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
